---
interface Props {
    image: string
}

const { image } = Astro.props
---

<div class="banner">
    <div class="title" data-aos="zoom-in-up">
        <div>
            <h1 class="light">La opci√≥n</h1>
            <h1>A la excelencia</h1>
        </div>
        <a href="">Recibe mas informacion</a>
    </div>
    <div class="image">
        <img src={image} alt="">
    </div>
</div>

<style>
    .banner {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        max-width: 100%;
        overflow: hidden;
        height: 50vh;
    }

    .banner::before {
        content: "";
        width: 100%;
        height: 100%;
        position: absolute;
        background: #00000038;
        z-index: 0;
        background: -moz-linear-gradient(180deg, rgba(0,0,0,0.08307072829131656) 0%, rgba(0,0,0,1) 97%);
        background: -webkit-linear-gradient(180deg, rgba(0,0,0,0.08307072829131656) 0%, rgba(0,0,0,1) 97%);
        background: linear-gradient(180deg, rgba(0,0,0,0.08307072829131656) 0%, rgba(0,0,0,1) 97%);
        filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#000000",endColorstr="#000000",GradientType=1);
    }

    .image {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: -1;
    }

    .image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }

    .title {
        position: absolute;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        z-index: 2;
    }

    .title h1 {
        text-transform: uppercase;
        color: var(--white);
        margin: 0;
        line-height: 3.85rem;
    }

    .title a {
        color: var(--white);
        background: var(--primary);
        padding: 10px;
        border-radius: 10px;
        margin: 10px 0 0;
        transition: color 0.3s ease-in-out, background 0.3s ease-in-out;
    }

    .title a:hover {
        color: var(--primary);
        background: var(--white);
    }

    @media (max-width: 560px) {
        .title h1 {
            font-size: 10.7vw;
            line-height: 11vw;
        }
    }
</style>