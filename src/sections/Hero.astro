---
import LogoEscuelaMedicina from "../icons/logo_escuela_medicina.astro"
---
<section class="hero" data-scroll data-scroll-speed="-0.6">
    <div class="video-container">
        <video src="/video/Clip-Medicina.webm" autoplay loop muted>
            Tu navegador no admite el elemento <code>video</code>.
        </video>
    </div>
    <div class="logo">
        <LogoEscuelaMedicina
            width="650px"
        />
    </div>
</section>

<style>
    .hero {
        z-index: -5;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100vh;
        overflow: hidden;
        position: relative;
        will-change: transform;
    }

    .video-container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    .video-container video {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .video-container::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.38);
    }

    .logo {
        z-index: 0;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;

    }
</style>
