---
import LogoMixtaVirtual from "../icons/logo-mixta-virtual.astro"
import EmailSend from "../icons/email_send.astro"
---
<input type="checkbox" id="menu">
<header>
    <div class="nav-menu">
        <a href="/" class="logo">
            <LogoMixtaVirtual
                width="235px"
            />
        </a>
        <label id="hamburger" for="menu">
            <div></div>
            <div></div>
            <div></div>
        </label>
        <nav>
            <ul class="links">
                <li class="dropdown">
                    <button>Oferta Educativa</button>
                    <ul class="dropdown-content">
                        <li><a href="/medicina">Medicina</a></li>
                        <li><a href="/enfermeria">Enfermer√≠a</a></li>
                    </ul>
                </li>
                <li><a class="pv-button" href="#">Plataforma Virtual</a></li>
                <li>
                    <a 
                        href="/contacto"
                        style="display: flex; align-items: center;"
                    >
                        <EmailSend 
                            width="30px"
                        />
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</header>

<style>
    header {
        position: fixed;
        top: 0;
        z-index: 99;
        width: 100vw;
    }

    .nav-menu {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: auto;
        padding: 15px 20px;
        max-width: 1280px;
    }

    .logo {
        display: flex;
        max-width: 65%;
    }

    nav {
        margin: 0;
        padding: 0;
        transition: height .4s;
    }

    #menu {
        display: none;
    }

    nav .links {
      list-style: none;
      display: flex;
      align-items: center;
      padding: 0;
      gap: 20px;
    }

    nav ul li {
      position: relative;
      display: inline-block;
    }

    nav ul li a {
      text-decoration: none;
      color: var(--white);
      padding: 7px 15px;
      display: block;
    }

    nav ul li a:hover {
      color: var(--primary);
    }

    .dropdown button {
        cursor: pointer;
        background-color: transparent;
        border: none;
        color: var(--white);
        margin: 0;
        padding: 7px 15px;
    }

    .dropdown button:hover {
        color: var(--primary);
    }

    .dropdown-content {
        height: 0;
        opacity: 0;
        position: absolute;
        z-index: 1;
        padding: 0 12px 0;
        transition: opacity .4s ease;
    }

    nav ul li.dropdown:hover .dropdown-content {
        height: auto;
        opacity: 1;
    }

    .dropdown-content li {
        margin-top: 5px;
        width: 200px;
    }

    .nav-menu .dropdown-content li a {
        margin: 0;
        padding: 7px 15px;
        color: var(--white);
        text-decoration: none;
    }

    .nav-menu .dropdown-content li a:hover {
        color: var(--primary);
    }

    .pv-button {
        background-color: var(--primary);
        border-radius: .5rem;
    }

    nav ul li .pv-button:hover {
      color: var(--white);
      background-color: var(--blue-100);
    }

    @media (max-width: 1175px) {
        #hamburger {
            width: 40px;
            height: 25px;
            position: relative;
            cursor: pointer;
        }

        #hamburger div {
            width: 100%;
            height: 4px;
            background: var(--gray-900);
            position: absolute;
            transform: translateY(-50%);
            border-radius: 99px;
            transition: 0.3s;
            transform: scale(1);
        }

        #hamburger div:nth-child(1) {
            top: 0;
        }

        #hamburger div:nth-child(2) {
            top: 50%;
        }

        #hamburger div:nth-child(3) {
            top: 100%;
        }

        #menu:checked + header .nav-menu nav {
            height: 100vh;
        }

        #menu:checked + header::before {
            height: 100vh;
            backdrop-filter: blur(20px);
        }

        #menu:checked + header #hamburger div:nth-child(1) {
            transform: rotate(45deg);
            top: 50%;
        }

        #menu:checked + header #hamburger div:nth-child(3) {
            transform: rotate(-45deg);
            top: 50%;
        }

        #menu:checked + header #hamburger div:nth-child(2) {
            transform: scale(0);
            opacity: 0;
        }
    }
</style>