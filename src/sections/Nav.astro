---
import LogoMixtaVirtual from "../icons/logo-mixta-virtual.astro"
import EmailSend from "../icons/email_send.astro"

interface Props {
    LicenciaturaTitle?: string | undefined;
    LicenciaturaSlug?: string | undefined;
}

const { LicenciaturaTitle, LicenciaturaSlug } = Astro.props
---
<input type="checkbox" id="menu">
<header>
    <div class="nav-menu">
        <a href="/" class="logo">
            <LogoMixtaVirtual
                width="190px"
            />
        </a>
        <label id="hamburger" for="menu">
            <div></div>
            <div></div>
            <div></div>
        </label>
        <nav>
            <ul class="links">
                {LicenciaturaSlug && (
                    <li class="dropdown" id="dropdown-1" onmouseover="handleOfferHover(1, true)" onmouseleave="handleOfferHover(1, false)">
                        <button onclick="handleClick(1)">Estructura Académica</button>
                        <ul class="dropdown-content" id="content-1">
                            <li><a href={`/${LicenciaturaSlug}/perfil-de-ingreso-y-egreso`}>Perfil de Ingreso y Egreso</a></li>
                            <li><a href={`/${LicenciaturaSlug}/#plan_de_estudios`}>Plan de Estudios</a></li>
                        </ul>
                    </li>
                )}
                <li class="dropdown" id="dropdown-2" onmouseover="handleOfferHover(2, true)" onmouseleave="handleOfferHover(2, false)">
                    <button onclick="handleClick(2)">Oferta Educativa</button>
                    <ul class="dropdown-content" id="content-2">
                        <li><a href="/medicina-mixta-virtual">Medicina Mixta Virtual</a></li>
                        <li><a href="/enfermeria">Enfermería Mixta Virtual</a></li>
                    </ul>
                </li>
                <li class="dropdown" id="dropdown-3" onmouseover="handleOfferHover(3, true)" onmouseleave="handleOfferHover(3, false)">
                    <button onclick="handleClick(3)">{LicenciaturaTitle} Mixta-Virtual</button>
                    <ul class="dropdown-content" id="content-3">
                        <li><a href="/campus1">Simulacion</a></li>
                        <li><a href="/campus2">Misión y Visión</a></li>
                        <li><a href="/campus3">Nosotros</a></li>
                    </ul>
                </li>
                <li><a class="pv-button" href="https://medicinavirtual.uad.mx/" target="_blank">Plataforma Virtual</a></li>
                <li>
                    <a 
                        class="email"
                        href="/contacto"
                        style="display: flex; align-items: center;"
                    >
                        <EmailSend 
                            width="30px"
                        />
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</header>

<style>
    header {
        position: fixed;
        top: 0;
        z-index: 99;
        width: 100%;
    }

    header::before {
        content: '';
        position: absolute;
        width: 100%;
        height: 88.324px;
        top: 0;
        left: 0;
        /* background: linear-gradient(180deg, rgba(22,22,23,0.9) 0%, rgba(22,22,23,0.5) 63%, rgba(22,22,23,0.042) 100%); */
        background: rgb(0,0,0);
        background: -moz-linear-gradient(180deg, rgba(0,0,0,0.6741071428571428) 0%, rgba(0,0,0,0) 100%);
        background: -webkit-linear-gradient(180deg, rgba(0,0,0,0.6741071428571428) 0%, rgba(0,0,0,0) 100%);
        background: linear-gradient(180deg, rgba(0,0,0,0.6741071428571428) 0%, rgba(0,0,0,0) 100%);
        filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#000000",endColorstr="#000000",GradientType=1);
        backdrop-filter: blur(0px);
        transition: height 0.5s ease, backdrop-filter 0.4s ease;
        z-index: -1;
        overflow: hidden;
    }

    header.scrolled::before {
        backdrop-filter: blur(20px);
    }


    header.hover-1::before {
        height: 150px;
        backdrop-filter: blur(20px);
    }

    header.hover-2::before {
        height: 180px;
        backdrop-filter: blur(20px);
    }

    header.hover-3::before {
        height: 200px;
        backdrop-filter: blur(20px);
    }

    header.clicked-1::before {
        height: 150px;
        backdrop-filter: blur(20px);
    }

    header.clicked-2::before {
        height: 180px;
        backdrop-filter: blur(20px);
    }

    header.clicked-3::before {
        height: 200px;
        backdrop-filter: blur(20px);
    }

    .dropdown-content.clicked-1, .dropdown-content.hover-1 {
        height: 75px;
        width: 260px;
        transition: height .5s ease .2s;

    }

    .dropdown-content.clicked-2, .dropdown-content.hover-2 {
        height: 115px;
        width: 260px;
        transition: height .5s ease .2s;

    }

    .dropdown-content.clicked-3, .dropdown-content.hover-3 {
        height: 115px;
        width: 260px;
        transition: height .5s ease .2s;

    }

    .nav-menu {
        display: flex;
        width: 100%;
        justify-content: space-between;
        align-items: center;
        margin: auto;
        padding: 12px 17px;
        max-width: 1280px;
    }

    .logo {
        display: flex;
        max-width: 65%;
    }

    nav {
        margin: 0;
        padding: 0;
        transition: height .4s;
    }

    #menu {
        display: none;
    }

    nav .links {
      list-style: none;
      display: flex;
      align-items: center;
      padding: 0;
      gap: 15px;
    }

    nav ul li {
      position: relative;
      display: inline-block;
    }

    nav ul li a {
      text-decoration: none;
      color: var(--white);
      padding: 7px 15px;
      display: block;
      transition: color 0.3s ease-in-out, background-color 0.3s ease-in-out;
    }

    nav ul li a:hover {
      color: var(--primary);
    }

    .dropdown button {
        cursor: pointer;
        background-color: transparent;
        border: none;
        color: var(--white);
        margin: 0;
        padding: 7px 0;
        transition: color 0.3s ease-in-out;
    }

    .dropdown button:hover {
        color: var(--primary);
    }

    .dropdown-content {
        height: 0;
        overflow: hidden;
        position: absolute;
        z-index: 1;
        padding: 0;
        transition: height .5s ease, width .4s ease;
    }

    .dropdown-content li {
        margin-top: 5px;
        width: 250px;
    }

    .nav-menu .dropdown-content li a {
        margin: 0;
        padding: 7px 0;
        color: var(--white);
        text-decoration: none;
    }

    .nav-menu .dropdown-content li a:hover {
        color: var(--primary);
    }

    .pv-button {
        background-color: var(--primary);
        border-radius: .5rem;
    }

    nav ul li .pv-button:hover {
      color: var(--white);
      background-color: var(--blue-100);
    }

    .email {
        padding: 5px 5px 5px 0 !important;
    }

    @media (max-width: 1050px) {
        header::before {
            height: 77.9261px;
        }

        nav {
            position: absolute;
            align-items: center;
            overflow-y: auto;
            top: 100px;
            left: 0;
            width: 100%;
            gap: 1.5rem;
            align-items: center;
            height: 0;
            transition: height .5s ease;
            overflow: hidden;
        }

        nav .links {
            flex-direction: column;
        }

        #hamburger {
            width: 40px;
            height: 25px;
            position: relative;
            cursor: pointer;
        }

        #hamburger div {
            width: 100%;
            height: 4px;
            background: var(--white);
            position: absolute;
            transform: translateY(-50%);
            border-radius: 99px;
            transition: 0.3s;
            transform: scale(1);
        }

        #hamburger div:nth-child(1) {
            top: 0;
        }

        #hamburger div:nth-child(2) {
            top: 50%;
        }

        #hamburger div:nth-child(3) {
            top: 100%;
        }

        #menu:checked + header .nav-menu nav {
            height: 100vh;
        }

        #menu:checked + header::before {
            height: 100vh;
            backdrop-filter: blur(20px);
        }

        #menu:checked + header #hamburger div:nth-child(1) {
            transform: rotate(45deg);
            top: 50%;
        }

        #menu:checked + header #hamburger div:nth-child(3) {
            transform: rotate(-45deg);
            top: 50%;
        }

        #menu:checked + header #hamburger div:nth-child(2) {
            transform: scale(0);
            opacity: 0;
        }

        .dropdown {
            height: 35px;
            display: flex !important;
            flex-direction: column;
            align-items: center;
            background: #00000015;
            backdrop-filter: blur(80px);
            border-radius: 10px;
            transition: height .4s ease, width .4s ease;
        }

        #dropdown-1 {
            width: 210px;
        }

        #dropdown-2 {
            width: 160px;
        }

        #dropdown-3 {
            width: 200px;
        }



        .dropdown-content {
            position: relative;
            width: 100%;
            text-align: center;
            padding: 0;
        }

        .dropdown-content li {
            width: 100%;
        }

        .dropdown.clicked-1 {
            height: 80px;
            width: 240px !important;
        }

        .dropdown.clicked-2 {
            height: 115px;
            width: 220px !important;
        }

        .dropdown.clicked-3 {
            height: 170px;
            width: 260px !important;
        }

        .dropdown-content.clicked-1,
        .dropdown-content.clicked-2,
        .dropdown-content.clicked-3 {
            transition: height .5s ;
        }


    }
</style>

<script>
    window.addEventListener('scroll', function() {
        const nav = document.querySelector('header') as HTMLElement;
        if (nav) {
            if (window.scrollY > 0) {
                nav.classList.add('scrolled');
            } else {
                nav.classList.remove('scrolled');
            }
        }
    });

    function handleOfferHover(dropdownId: number, isHover: boolean) {
        if (window.innerWidth < 1050) {
            return;
        }
        const header = document.querySelector('header') as HTMLElement;
        const content = document.getElementById(`content-${dropdownId}`) as HTMLElement;
        if (header && content) {
            if (isHover) {
                const allDropdowns = document.querySelectorAll('.dropdown');
                const allContents = document.querySelectorAll('.dropdown-content');
            
                // Remueve las clases clicked-1 y clicked-2 excepto del elemento actual
                allDropdowns.forEach(d => {
                    if (!d.classList.contains(`clicked-${dropdownId}`)) {
                        d.classList.remove('clicked-1', 'clicked-2', 'clicked-3');
                    }
                });
                allContents.forEach(c => {
                    if (!c.classList.contains(`clicked-${dropdownId}`)) {
                        c.classList.remove('clicked-1', 'clicked-2', 'clicked-3');
                    }
                });
                if (!header.classList.contains(`clicked-${dropdownId}`)) {
                    header.classList.remove('clicked-1', 'clicked-2', 'clicked-3');
                }

                header.classList.add(`hover-${dropdownId}`);
                content.classList.add(`hover-${dropdownId}`);
            } else {
                header.classList.remove(`hover-${dropdownId}`);
                content.classList.remove(`hover-${dropdownId}`);
            }
        }
    }


    function handleClick(dropdownId: number) {
        const header = document.querySelector('header') as HTMLElement;
        const dropdown = document.getElementById(`dropdown-${dropdownId}`) as HTMLElement;
        const content = document.getElementById(`content-${dropdownId}`) as HTMLElement;

        const isDropdownOpen = dropdown.classList.contains(`clicked-${dropdownId}`);
        const isContentOpen = content.classList.contains(`clicked-${dropdownId}`);

        const allDropdowns = document.querySelectorAll('.dropdown');
        const allContents = document.querySelectorAll('.dropdown-content');

        // Remove clicked states from all dropdowns and contents
        allDropdowns.forEach(d => d.classList.remove('clicked-1', 'clicked-2', 'clicked-3'));
        allContents.forEach(c => c.classList.remove('clicked-1', 'clicked-2', 'clicked-3'));
        header.classList.remove('clicked-1', 'clicked-2', 'clicked-3');

        if (!isDropdownOpen && !isContentOpen) {
            if (dropdown && content) {
                dropdown.classList.add(`clicked-${dropdownId}`);
                content.classList.add(`clicked-${dropdownId}`);
                if (window.innerWidth > 1050) {
                    header.classList.add(`clicked-${dropdownId}`);
                }
            }
        }
    }


    function handleMouseLeave() {
        const header = document.querySelector('header') as HTMLElement;
        const allDropdowns = document.querySelectorAll('.dropdown') as NodeListOf<HTMLElement>;
        const allContents = document.querySelectorAll('.dropdown-content') as NodeListOf<HTMLElement>;

        // Remove hover states from all dropdowns and contents
        header.classList.remove('hover-1', 'hover-2', 'hover-3');
        allDropdowns.forEach(d => d.classList.remove('hover-1', 'hover-2', 'hover-3'));
        allContents.forEach(c => c.classList.remove('hover-1', 'hover-2', 'hover-3'));
    }



    function removeClickedClasses() {
        const elements = document.querySelectorAll('.clicked-1, .clicked-2, .clicked-3, .hover-1, .hover-2, .hover-3');
        elements.forEach(el => {
            el.classList.remove('clicked-1', 'clicked-2', 'clicked-3', 'hover-1', 'hover-2', 'hover-3');
        });
    }


    document.querySelector('header').addEventListener('mouseleave', handleMouseLeave);


    window.addEventListener('resize', removeClickedClasses);
    window.handleOfferHover = handleOfferHover;
    window.handleClick = handleClick;
</script>